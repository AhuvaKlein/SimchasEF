@using SimchasEF.Data
@model HistoryViewModel


<h1>History of @Model.Contributor.Name</h1>

<div>
    <table class="table table-bordered" id="contributor-table">
        <tr>
            <th>Action</th>
            <th>Date</th>
            <th>Amount</th>

        </tr>
        @if (Model != null)
        {
            foreach (ContributorHistory deposit in Model.ContributionsDeposits)
            {
                <tr>
                    <td>@deposit.Action</td>
                    <td>@deposit.Date.ToShortDateString()</td>
                    @if (deposit.Action == "Deposit")
                    {
                        <td>@deposit.Amount.ToString("C")</td>
                    }
                    else
                    {
                        <td>-@deposit.Amount.ToString("C")</td>
                    }

                </tr>
            }
        }
    </table>
</div>

<br />

<a href="/home/displayContributors" class="btn btn-success">Go Back To Contributors</a>

